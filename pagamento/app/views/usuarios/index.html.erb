<center>
<h1>Lista de Usuários</h1>

<table>
  <tr>
    <th>Email</th>
    <th></th>
    <th></th>
  </tr>

<% @usuarios.each do |usuario| %>
  <tr>
    <td><%= usuario.email %></td>
    <td><%= link_to image_tag("edit.jpg", :border=>0), edit_usuario_path(usuario) %></td>
    <td><%= link_to image_tag("delete.jpg", :border=>0), usuario, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br/>
<%= paginate @usuarios %>
<br/>

<%= link_to 'Novo Usuário', new_usuario_path %>
</center>