<h1>Lista os contatos</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Email</th>
    <th>Nascimento</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contatos.each do |contato| %>
  <tr>
    <td><%= contato.nome %></td>
    <td><%= contato.email %></td>
    <td><%= contato.nascimento %></td>
    <td><%= link_to 'Mostra', contato %></td>
    <td><%= link_to 'Altera', edit_contato_path(contato) %></td>
    <td><%= link_to 'Exclui', contato, confirm: 'Tem certeza?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo Contato', new_contato_path %>
